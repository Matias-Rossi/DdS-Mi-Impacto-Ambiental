{{#partial "contenido" }}

    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerUbicacion">
            <h3 class="textoIngreso" >Trayectos</h3>
        </div>
    </div>

<div class="d-flex flex-column" id="content-wrap">
    <div class=" d-flex align-self-center conteinerRegistro">
        <main>
            <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                <ol class="list-group" id="boxTrayectos">
                    {{#each trayectos}}
                    <form class="was-validated" novalidate method="POST" action="/trayectos/{{id}}/delete" onsubmit="return confirm('Está seguro que desea borrar el trayecto {{descripcion}}?')">
                    <li class="list-group-item d-flex justify-content-between align-items-start align-middle texto">
                        <div class="ms-2 me-auto">
                            <a class="listStyle" href="/trayectos/{{id}}/tramos"> {{descripcion}}</a>
                        </div>
                        <button class="material-symbols-outlined delete btn-nohover"  type="submit">delete</button>
                    </li>
                        </form>
                    {{/each}}
                </ol>
                <div class="d-flex justify-content-center">
                    <span class="material-symbols-outlined" style="margin-top:20px; cursor: pointer;"
                        data-bs-toggle="modal" data-bs-target="#agregarTrayecto">add_circle</span>
                </div>
            </div>

        </main>
    </div>
</div>

<!-- Modal Agregar Trayecto -->
<div class="modal fade" id="agregarTrayecto" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <main>
                    <form class="was-validated" method="POST" action="/trayectos/" novalidate>

                        <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                            <div class="col-md-12">
                                <label for="inputNombreDelTrayecto" class="form-label textoInputs">Nombre del
                                    trayecto</label>
                                <input name="descripcion" type="text" class="form-control" id="inputNombreDelTrayecto" placeholder=""
                                    value="" required>
                            </div>
                        </div>
                        <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                            <div class="col-md-12">
                                <label for="selectOrganizaciones" class="form-label textoInputs">Organizacion</label>
                                <select name="organizaciones" class="form-select form-select-custom" id="selectOrganizaciones"
                                        required>
                                    <option selected disabled value="">-- Seleccionar una organizacion --</option>
                                    {{#each areas}}
                                        <option  value="{{organizacion.id}}"> {{ organizacion.razonSocial }} - {{ nombre }} </option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                            <div class="col-md-4">
                                <label for="anio" class="form-label textoInputs">Año de imputacion</label>
                                <input name="anio" type="number" min="0" max="9999" class="form-control" id="anio" placeholder=""
                                       value="" required>
                            </div>

                            <div class="col-md-4">
                                <label for="semestre" class="form-label textoInputs">Semestre</label>
                                <select name="semestre" class="form-select form-select-custom" id="semestre"
                                        required>
                                    <option selected disabled value="">-- Seleccionar un semestre --</option>
                                        <option value="0">Primer semestre</option>
                                    <option value="1">Segundo semestre</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="diasAlMes" class="form-label textoInputs">Dias al mes</label>
                                <input name="diasAlMes" type="number" min="0" max="31" class="form-control" id="diasAlMes" placeholder=""
                                       value="" required>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="btn btn-custom" type="submit" style="margin-top:10px; margin-bottom: 20px;"
                                data-bs-dismiss="modal">Agregar</button>
                        </div>

                    </form>
                </main>


            </div>

        </div>

    </div>
</div>
<!--Fin Modal Agregar Trayecto -->


{{/partial}}
